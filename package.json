{
  "name": "@markupai/n8n-nodes-markupai",
  "version": "0.2.7",
  "description": "n8n node for MarkupAI",
  "keywords": [
    "n8n-community-node-package",
    "n8n",
    "markupai",
    "content-guardian",
    "brand-alignment",
    "text-analysis",
    "writing-assistant",
    "style-guide",
    "content-quality",
    "ai-writing",
    "low-code"
  ],
  "homepage": "https://docs.markup.ai/",
  "repository": {
    "type": "git",
    "url": "https://github.com/markupai/n8n-app"
  },
  "license": "MIT",
  "author": {
    "name": "MarkupAI",
    "email": "support@markupai.com"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json && gulp build:icons && gulp build:package",
    "check:stable-version": "node -e \"const v=require('./package.json').version; if (!/^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)$/.test(v)) { console.error('Refusing to publish prerelease version: ' + v); process.exit(1); }\"",
    "cleanup": "./dev/cleanup.sh",
    "dev": "tsc --project tsconfig.build.json --watch",
    "format:check": "prettier . --check",
    "format:fix": "prettier . --write",
    "lint:check": "eslint --config eslint.config.js .",
    "lint:fix": "eslint --config eslint.config.js . --fix",
    "lint:prepublish": "eslint --config eslint.config.prepublish.js \"nodes/**/*.ts\" \"credentials/**/*.ts\" package.json",
    "prepublishOnly": "npm run build && eslint --config eslint.config.prepublish.js \"nodes/**/*.ts\" \"credentials/**/*.ts\" package.json && npm run check:stable-version",
    "setup": "./dev/setup.sh",
    "start": "n8n start",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:debug": "node --inspect-brk node_modules/vitest/vitest.mjs run --no-file-parallelism",
    "test:debug:watch": "node --inspect node_modules/vitest/vitest.mjs watch --no-file-parallelism",
    "test:watch": "vitest",
    "type-check": "tsc --project tsconfig.json --noEmit"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.3.3",
    "@types/node": "25.0.2",
    "@vitest/coverage-v8": "4.0.15",
    "eslint-plugin-n8n-nodes-base": "1.16.4",
    "globals": "16.5.0",
    "gulp": "5.0.1",
    "n8n": "2.0.2",
    "prettier": "3.7.4",
    "prettier-plugin-packagejson": "2.5.20",
    "typescript": "5.9.3",
    "typescript-eslint": "8.50.0",
    "vitest": "4.0.15"
  },
  "peerDependencies": {
    "n8n-workflow": "*"
  },
  "engines": {
    "node": ">=24"
  },
  "publishConfig": {
    "access": "public"
  },
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/MarkupAiApi.credentials.js"
    ],
    "nodes": [
      "dist/nodes/Markupai/Markupai.node.js"
    ]
  }
}
