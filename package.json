{
	"name": "@markupai/n8n-nodes-markupai",
	"version": "0.2.5-dev.1",
	"description": "n8n node for MarkupAI",
	"keywords": [
		"n8n-community-node-package",
		"n8n",
		"markupai",
		"content-guardian",
		"brand-alignment",
		"text-analysis",
		"writing-assistant",
		"style-guide",
		"content-quality",
		"ai-writing",
		"low-code"
	],
	"homepage": "https://docs.markup.ai/",
	"repository": {
		"type": "git",
		"url": "https://github.com/markupai/n8n-app"
	},
	"license": "MIT",
	"author": {
		"name": "MarkupAI",
		"email": "support@markupai.com"
	},
	"main": "index.js",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsc && gulp build:icons",
		"check:stable-version": "node -e \"const v=require('./package.json').version; if (!/^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)$/.test(v)) { console.error('Refusing to publish prerelease version: ' + v); process.exit(1); }\"",
		"dev": "tsc --watch",
		"format": "prettier nodes . --write",
		"format:check": "prettier nodes . --check",
		"lint": "eslint nodes . package.json",
		"lintfix": "eslint nodes . package.json --fix",
		"prepublishOnly": "npm run build && npm run lint -c .eslintrc.prepublish.js nodes credentials package.json && npm run check:stable-version",
		"test": "vitest run",
		"test:coverage": "vitest run --coverage",
		"test:debug": "node --inspect-brk node_modules/vitest/vitest.mjs run --no-file-parallelism",
		"test:debug:watch": "node --inspect node_modules/vitest/vitest.mjs watch --no-file-parallelism",
		"test:watch": "vitest"
	},
	"devDependencies": {
		"@types/node": "^24.6.1",
		"@typescript-eslint/parser": "^8.45.0",
		"@vitest/coverage-v8": "^3.2.4",
		"eslint-plugin-n8n-nodes-base": "^1.16.3",
		"gulp": "^5.0.1",
		"n8n-workflow": "*",
		"prettier": "^3.6.2",
		"typescript": "^5.9.3",
		"vitest": "^3.2.4"
	},
	"peerDependencies": {
		"n8n-workflow": "*"
	},
	"engines": {
		"node": ">=20.15"
	},
	"publishConfig": {
		"access": "public"
	},
	"n8n": {
		"n8nNodesApiVersion": 1,
		"credentials": [
			"dist/credentials/MarkupAiApi.credentials.js"
		],
		"nodes": [
			"dist/nodes/Markupai/Markupai.node.js"
		]
	}
}
